# Backend Environment Variables Example
# Copy this file to .env and fill in your values

# MongoDB Connection String
# Get this from MongoDB Atlas: Database → Connect → Connect your application
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/answerly?retryWrites=true&w=majority

# Server Port (default: 3000, Render uses 10000)
PORT=3000

# Google Gemini API Key
# Get this from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Node Environment (development or production)
NODE_ENV=development